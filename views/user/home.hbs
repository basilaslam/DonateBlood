	{{!-- Filter --}}
	<section class="filter">
		<form class="filter__wrapper"  action="/home/filter/" method="POST">
  <div class="form-group select__blood">
	<select name="blood" aria-placeholder="">
  <option selected desabled='desabled' value=''>Select Your Blood Group</option>
  <option value="A+ve">A+ve</option>
  <option value="A+ve">A-ve</option>
  <option value="B+ve">B+ve</option>
  <option value="B-ve">B-ve</option>
  <option value="AB+ve">AB+ve</option>
  <option value="AB-ve">AB-ve</option>
  <option value="O+ve">O+ve</option>
  <option value="O-ve">O-ve</option>
</select>
<span class="arrow"></span>

</div>
  </div>
    <div class="form-group">
    <input type="name" name="country" class="form-control"  placeholder="country">
  </div>
      <div class="form-group">
    <input type="name" name="state" class="form-control"  placeholder="state">
  </div>
      <div class="form-group">
    <input type="name" name="district" class="form-control"  placeholder="district">
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
	</section>

	{{!-- Table --}}
	            <div class="card mb-4">
                <div class="card-body">
                    <!--Table-->
                    <table class="table table-hover">
                        <!--Table head-->
                        <thead class="mdb-color darken-3">
                            <tr class="text-white">
                                <th>No</th>
                                <th>Name</th>
                                <th>Blood Group</th>
                                <th>Location</th>
                                <th>Contact</th>
                            </tr>
                        </thead>
                        <!--Table head-->
                        <!--Table body-->
						
                        <tbody>
							{{#if allUsers}}
							{{#each allUsers}}
                            <tr>
                                <th scope="row">1</th>
                                <td>{{this.name}}</td>
                                <td>{{this.blood}}</td>
                                <td>{{this.country}},{{this.state}},{{this.district}}</td>
                                <td>{{this.phone}}<br>{{this.email}}</td>
                            </tr>
							{{/each}}
							{{else}}
							<tr>
                                
                                <td colspan="5">No Records Found <a href="/home">Click Here to Refresh</a></td>
                            </tr>
							{{/if}}

                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>
            </div>




	
